<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/px_20"
    android:paddingRight="@dimen/px_20">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_20"
        android:text="@string/str_opera_title"/>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px_20"
        android:background="@color/black"
        android:layout_below="@id/tv_dialog_title" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_222c3c"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/px_20"
        android:layout_below="@id/divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/yellow_d5d9e1"
            android:gravity="center"
            android:minHeight="48dp"
            android:minWidth="180dp"
            android:text="@string/str_opera_cancel"
            android:textColor="@color/black_222c3c"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/yellow_d5d9e1"
            android:gravity="center"
            android:minHeight="48dp"
            android:minWidth="180dp"
            android:layout_marginLeft="@dimen/px_15"
            android:text="@string/str_opera_confrim"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>